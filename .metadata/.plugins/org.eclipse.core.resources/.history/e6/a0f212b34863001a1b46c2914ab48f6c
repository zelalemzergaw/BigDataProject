package f;

import org.apache.hadoop.io.DoubleWritable;
import org.apache.hadoop.io.IntWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;

import java.io.IOException;

public class AverageComputationWithInMapperReducer extends Reducer<Text, Pair, Text, DoubleWritable> {

    @Override
    public void reduce(Text key, Iterable<Pair> values, Context context) throws IOException, InterruptedException
    {
        int sum = 0, count = 0;
        for (Pair val : values)
        {
            sum += val.getSum().get();
            count += val.getCount().get();
        }
        DoubleWritable result = new DoubleWritable();
        result.set(sum / count);
        context.write(key, result);
    }

}
